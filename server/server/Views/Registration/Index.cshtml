@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
            <form role="form">
                <h3>Thông tin cơ bản </h3>
                <hr class="colorgraph">
                <div class="row">
                    <div class="form-group">
                        <div class="col-xs-12 col-sm-6 col-md-6">
                            <input type="text" name="first_name" id="first_name" class="form-control input" placeholder="Tên" tabindex="1">
                        </div>
                        <div class="col-xs-12 col-sm-6 col-md-6">
                            <input type="text" name="last_name" id="last_name" class="form-control input" placeholder="Họ và tên đệm" tabindex="2">
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 form-group">
                            <label class="label control-label"> Họ tên đăng ký trên Fun88 phải giống với Họ tên khi đăng ký tài khoản ngân hàng </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <input type="text" name="birthday" id="birthday" class="form-control input" placeholder="Ngày sinh" tabindex="3">
                </div>
                <div class="radio form-group">
                    <label class=" radio-inline">
                        <input type="radio" name="sex" class="input"> Nam
                    </label>
                    <label class="radio-inline">
                        <input type="radio" name="sex" class="input"> Nữ
                    </label>
                </div>

                <h3>Bảo mật tài khoản </h3>
                <hr class="colorgraph">

                <div class="form-group">
                    <input type="text" name="account_name" id="account_name" class="form-control input" placeholder="Tên đăng nhập" tabindex="4">
                </div>
                <div class="row">
                    <div class="form-group">
                        <div class="col-xs-12 col-sm-6 col-md-6">
                            <input type="password" name="password" id="password" class="form-control input" placeholder="Password" tabindex="5">
                        </div>
                        <div class="col-xs-12 col-sm-6 col-md-6">
                            <input type="password" name="password_confirmation" id="password_confirmation" class="form-control input" placeholder="Confirm Password" tabindex="6">
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 form-group">
                            <label class="label control-label"> Mật khẩu tối thiểu 6 kí tự </label>
                        </div>
                    </div>

                </div>
                <div class="form-group">
                    <select class="form-control">
                        <option>Câu hỏi bảo mật</option>
                        <option>...</option>
                    </select>
                </div>

                <h3>Thông tin chi tiết </h3>
                <hr class="colorgraph">

                <div class="form-group">
                    <input type="email" name="email" id="email" class="form-control input" placeholder="Email" tabindex="7">
                </div>
                <div class="form-group">
                    <input type="email" name="email_confirm" id="email_confirm" class="form-control input" placeholder="Xác nhận Email" tabindex="8">
                </div>
                <div class="form-group">
                    <input type="text" name="mobile_phone" id="mobile_phone" class="form-control input" placeholder="Số điện thoại" tabindex="9">
                    <label class="label control-label"> Chỉ chấp nhận số điện thoại di động </label>
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="3" id="address" placeholder="Địa chỉ"></textarea>
                </div><div class="form-group">
                    <select class="form-control">
                        <option>Quốc gia</option>
                        <option>Việt Nam</option>
                    </select>
                </div>
                <div class="row form-group">
                    <div class="col-xs-12 col-sm-3 col-md-3">
                        <input type="text" name="area_code" id="area_code" class="form-control input" placeholder="Mã vùng" tabindex="10">
                    </div>
                    <div class="col-xs-12 col-sm-9 col-md-9">
                        <select class="form-control">
                            <option>Thành Phố</option>
                            <option>Hồ Chí Minh</option>
                        </select>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <select class="form-control">
                            <option>Quốc Tịch</option>
                            <option>Việt Nam</option>
                        </select>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <select class="form-control">
                            <option>Nơi Sinh</option>
                            <option>Việt Nam</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <select class="form-control">
                        <option>Tiền tệ ưa thích</option>
                        <option>Việt Nam Đồng</option>
                    </select>
                </div>
                <div class="form-group">
                    <select class="form-control">
                        <option>Ngôn ngữ sử dụng</option>
                        <option>Tiếng Việt</option>
                    </select>
                </div>
                <div class="form-group">
                    <select class="form-control">
                        <option>Ví điện tử ưa thích</option>
                        <option>Thể Thao</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="text" name="link_code" id="link_code" class="form-control input" placeholder="Mã liên kết" tabindex="9">
                </div>



                <div class="row">
                    <div class="col-xs-4 col-sm-3 col-md-3">
                        <span class="button-checkbox">
                            <button type="button" class="btn" data-color="info" tabindex="7"> I Agree</button>
                            <input type="checkbox" name="t_and_c" id="t_and_c" class="hidden" value="1">
                        </span>
                    </div>
                    <div class="col-xs-8 col-sm-9 col-md-9">
                        By clicking <strong class="label label-primary">Register</strong>, you agree to the <a href="#" data-toggle="modal" data-target="#t_and_c_m">Terms and Conditions</a> set out by this site, including our Cookie Use.
                    </div>
                </div>

                <hr class="colorgraph">
                <div class="row form-group">
                    <div class="col-xs-12 col-md-6"><input type="submit" value="Đăng ký" class="btn btn-primary btn-block btn-lg" tabindex="7"></div>
                    <div class="col-xs-12 col-md-6"><a href="#" class="btn btn-success btn-block btn-lg">Đăng nhập</a></div>
                </div>
            </form>
        </div>
    </div>
</div>

