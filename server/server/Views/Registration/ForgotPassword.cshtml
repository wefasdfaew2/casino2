
@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
            <form role="form">
                <h3>Thông tin cơ bản </h3>
                <hr class="colorgraph">
                <div class="row">
                    <div class="form-group">
                        <div class="col-xs-12 col-sm-12 col-md-12">
                            <input type="text" name="first_name" id="first_name" class="form-control input" placeholder="Email của bạn" tabindex="1">
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 form-group">
                            <label class="label control-label"> Vui lòng nhập địa chỉ email đăng ký của bạn</label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <select class="form-control">
                        <option>Câu hỏi bảo mật</option>
                        <option>Bồ bạn tên gì ? :D</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="text" name="birthday" id="birthday" class="form-control input" placeholder="Trả lời câu hỏi bảo mật" tabindex="3">
                </div>
                
                <hr class="colorgraph">
                <div class="row form-group">
                    <div class="col-xs-12 col-md-6"><input type="submit" value="Xác nhận" class="btn btn-primary btn-block btn-lg" tabindex="7"></div>
                </div>
            </form>
        </div>
    </div>
</div>

